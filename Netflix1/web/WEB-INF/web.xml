<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>controller.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VideoServlet</servlet-name>
        <servlet-class>controller.VideoListaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VideoDetalhe</servlet-name>
        <servlet-class>controller.VideoDetalhe</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/NovoUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VideoServlet</servlet-name>
        <url-pattern>/ListaVideos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VideoDetalhe</servlet-name>
        <url-pattern>/VideoDetalhe</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
